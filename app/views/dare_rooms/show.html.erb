<%= render 'shared/notice' %>
<% if current_user.id == (@userdare.sent_from_id) %>
	<%= render 'darer' %>
<% else %>
	<% if !@userdare.isSelected %>
		<%= render 'daree' %>
	<% else %>
		<% if !@userdare.accepted %>
			<%= render 'declined' %>
		<% else %>
			<!-- if the user has uploaded proof -->
			<% if (@userdare.proof.blank?) %>
				<%= render 'accepted' %>
			<% else %>
				<!-- if the user proof has not been approved -->
				<% if (@userdare.proof_approved.blank?) %>
					<%= render 'proof' %> 
				<% else %>
					<%= render 'proof_approved' %>
				<% end %>
			<% end %>
		<% end %>
	<% end %> <!--end isSelected an option view -->
<% end %> <!--end current_user or not -->

